<h3>Edit the Store</h3>

<!-- <form action="/stores/<%= @store.id%>"> -->
<%=form_tag "/stores/#{@store.id}", :method => "patch" do%>

    <div>
		<label>Store name: </label>
		<input type="string" name="name" value="<%= @store.name%>">
	</div>

    <div><!-- Create a selection, to pick the type of the store-->
        <label>Store kind: </label>
        <select  name="kind">
        	<option value="Crafty">Crafty</option>
        	<option value="Jewlery">Jewlery</option>
        	<option value="Arts">Arts</option>
        </select>
    </div>


    <div>
		<label>Store Photo URL: </label>
		<input type="text" name="photourl" value="<%= @store.photourl%>">
	</div>

	<div>
		<label>Store Contact information: </label>
		<input type="string" name="contact_info" value="<%= @store.contact_info%>">
	</div>

	<div>
		<label>Store open date: </label>
		<input type="string" name="open_date" value="<%= @store.open_date%>">
	</div>

	
	<div>
		<label>Store description: </label>
		<textarea type="text" name="desc" cols="80" rows="3" value="<%= @store.description%>"></textarea>
	</div>
        
	<div>
		<input type="submit" value="update">
	</div>


<%end%>
<!-- </form> -->

